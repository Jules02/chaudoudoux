{% extends 'base.html.twig' %}

{% block title %}Mes chaudoudoux{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/mes_chaudoudoux_style.css') }}">
{% endblock %}

{% block body %}
    <div class="content-wrapper" id="content-wrapper">
        <h3 class="content-title">Mes chaudoudoux ({{ chaudoudouxUnseen|length + chaudoudouxSeen|length }})</h3>
        <h4>Nouveaux</h4>
        {% for chaudoudouxUnseen in chaudoudouxUnseen %}
            <a href="#" class="chaudoudoux-wrapper">{# will be href={{ path('app_chaudoudoux', {'id': chaudoudoux.id}) }}#}
                De: <span class="chaudoudoux-from">{{ chaudoudouxUnseen.fromUser }}</span><span class="chaudoudoux-date">, le {{ chaudoudouxUnseen.publishedAt|date('d', 'Europe/Paris') }} mai à {{ chaudoudouxUnseen.publishedAt|date('H:i', 'Europe/Paris') }}</span>
            </a>
        {% endfor %}
        <h4>Anciens</h4>
        {% for chaudoudouxSeen in chaudoudouxSeen %}
            <a href="#" class="chaudoudoux-wrapper chaudoudoux-wrapper-seen">{# will be href={{ path('app_chaudoudoux', {'id': chaudoudoux.id}) }}#}
                De: <span class="chaudoudoux-from">{{ chaudoudouxSeen.fromUser }}</span><span class="chaudoudoux-date">, le {{ chaudoudouxSeen.publishedAt|date('d', 'Europe/Paris') }} mai à {{ chaudoudouxSeen.publishedAt|date('H:i', 'Europe/Paris') }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
